---
import Whatsapp from "../components/Whatsapp.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- Meta Tags SEO -->
    <meta
      name="description"
      content="Cleverson Borges Advogado. Site especializado em serviços jurídicos"
    />
    <meta
      name="keywords"
      content="advogado, serviços jurídicos, direito, consultoria, Juiz de Fora, MG, Brasil, Pequeri, Pequeri-MG"
    />
    <meta name="author" content="Fllatech Soluções em Tecnologia" />
    <meta name="robots" content="index, follow" />
    <!-- Open Graph -->
    <meta property="og:title" content="Cleverson Borges Advogado" />
    <meta
      property="og:description"
      content="Cleverson Borges Advogado. Site especializado em serviços jurídicos"
    />
    <meta property="og:url" content="cleversonborgesadvogado.com.br" />
    <meta property="og:type" content="website" />
    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Cleverson Borges Advogado" />
    <meta
      name="twitter:description"
      content="Cleverson Borges Advogado. Site especializado em serviços jurídicos"
    />
    <meta name="twitter:url" content="cleversonborgesadvogado.com.br" />
    <link rel="icon" type="image/png" href="/logo.png" sizes="32x32" />

    <title>Cleverson Advogado</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:ital,wght@0,300..800;1,300..800&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&family=Roboto+Serif:ital,opsz,wght@0,8..144,100..900;1,8..144,100..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <style>
      html,
      body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100vh;
        box-sizing: border-box;
        background-color: var(--background-color);
        font-family: var(--text-paragraph-font);
        overflow-y: scroll;
        scroll-behavior: smooth;
        overflow-x: hidden;
      }
      /* Esconde a barra de rolagem em diferentes navegadores */
      html {
        scrollbar-width: none; /* Firefox */
      }
      body {
        -ms-overflow-style: none; /* IE e Edge */
      }
      body::-webkit-scrollbar {
        display: none; /* Chrome, Edge e Safari */
      }

      :root {
        --background-color: #1b1a1a;
        --main-color: #5f2823;
        --secondary-color: #c86c62;
        --light-color: #ebebf0;
        --light-input-background: rgba(255, 255, 255, 0.1);
        --success-color: #39d98a;
        --text-paragraph-font: "Merriweather", serif;
        --text-title-font: "Roboto", sans-serif;
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body>
    <Whatsapp />
    <slot />
  </body>
</html>
