---
import logoImage from "../assets/logo/logo.png";
---

<div class="navbar">
  <div class="logo">
    <img
      class="logo"
      src={logoImage.src}
      alt={"Imagem logo escritório cleverson borges sociedade individual de advocacia"}
      width="150"
    />
  </div>
  <div class="menu">
    <a href="#home">Início</a>
    <a href="#about">Quem Sou</a>
    <a href="#services">Meus Serviços</a>
    <a href="#contact">Contato</a>
  </div>
  <div class="hamburger" id="hamburger">
    <div></div>
    <div></div>
    <div></div>
  </div>
  <div class="btn-navbar">
    Mande sua Dúvida
    <div class="btn-border"></div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const hamburger = document.getElementById("hamburger");
    const callme = document.getElementsByClassName("btn-navbar")[0];
    const menu = document.querySelector(".navbar .menu");

    if (hamburger && menu) {
      hamburger.addEventListener("click", () => {
        menu.classList.toggle("active");
      });
    }

    callme.addEventListener("click", () => {
      window.open(
        "https://wa.me/5532920007640?text=Olá! Venho do Site e preciso de uma consultoria",
        "_blank"
      );
    });
  });
</script>
<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
    background: rgba(51, 51, 51, 0.8);
    backdrop-filter: blur(10px);
    color: white;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
  }

  .menu {
    display: flex;
    gap: 20px;
    flex: 2;
    font-size: 14px;
    justify-content: center;
    font-weight: 100;
  }

  .menu a {
    color: white;
    text-decoration: none;
  }

  .menu a:hover {
    color: #c86c62;
    transition: ease-in-out 350ms;
  }
  .hamburger {
    display: none;
    flex-direction: column;
    gap: 5px;
    cursor: pointer;
  }

  .btn-navbar {
    width: 180px;
    height: 35px;
    background: linear-gradient(270deg, #2b2b2b, #434343, #2b2b2b);
    background-size: 600% 600%;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    margin-right: 40px;
    position: relative;
    animation: gradientAnimation 10s ease infinite;
    box-shadow: 2px 2px 10px 0px rgba(0, 0, 0, 0.075);
    color: #c86c62;
    cursor: pointer;
  }

  @keyframes gradientAnimation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  .hamburger div {
    width: 25px;
    height: 3px;
    background-color: white;
  }

  .logo {
    padding: 10px;
    object-fit: cover;
  }

  @media (max-width: 768px) {
    .menu {
      display: none;
      flex-direction: column;
      position: absolute;
      border-radius: 0px 0px 4px 4px;
      top: 70px;
      right: 0;
      width: 100%;
      background: rgba(51, 51, 51, 0.8);
      backdrop-filter: blur(10px);
      padding: 20px;
      text-align: left;
    }

    .menu.active {
      display: flex;
      width: 30%;
    }

    .hamburger {
      display: flex;
      margin-right: 10px;
    }
    .btn-navbar {
      display: none;
    }
    .logo {
      width: 150px;
    }
  }
</style>
