<style>
  a,
  a:hover,
  a:visited {
    text-decoration: none;
    color: inherit;
  }
  @keyframes subtle-background-move {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 30% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  #container-footer {
    background: linear-gradient(
      90deg,
      rgba(200, 108, 98, 1) 0%,
      rgba(200, 108, 98, 1) 35%,
      rgba(154, 91, 84, 1) 100%
    );
    background-size: 200% 200%;
    animation: subtle-background-move 10s infinite ease-in-out;
    position: relative;
    bottom: 0;
    margin: 0 auto;
    /* height: 65%; */
    max-height: 700px;
    width: 100%;
    display: flex;
    justify-content: center;
    font-family: var(--text-paragraph-font);
  }
  .container-footer-elements {
    width: 100%;
    max-width: 1200px;
    padding: 10px;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
  }
  h1 {
    font-weight: 100;
  }
  .container-contacts {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .block {
    width: 50%;
    font-size: 1.1rem;
    font-weight: 100;
    font-style: italic;
    min-width: 320px;
  }
  .phrase-elements-contact {
    text-align: left;
    padding: 30px;
    line-height: 30px;
  }
  .list-elements-contact {
    display: flex;
    flex-direction: column;
    gap: 20px;
    font-style: normal;
    list-style-type: none;
    margin: 0;
    padding: 0;
    flex: 1;
  }
  li {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    width: 100%;
    gap: 10px;
    cursor: pointer;
    transition: ease-in-out 150ms;
  }
  li:hover {
    color: var(--main-color);
  }
  .line-divisor {
    width: 100%;
    height: 1px;
    background-color: #000000;
    margin: 2px auto;
  }

  .list-container-item-developement {
    display: flex;
    width: 100%;
    margin: 0;
    padding: 0;
  }
  .footer-final-text-elements {
    font-size: 12px;
    margin-bottom: 20px;
  }
  @media (max-width: 792px) {
    .container-contacts {
      flex-wrap: wrap;
      gap: 30px;
    }
    .block {
      width: 100%;
    }
    .phrase-elements-contact {
      padding: 0;
      font-size: 12px;
    }
    .list-container-item-developement {
      flex-direction: column;
    }
    .container-footer-elements {
      justify-content: flex-start;
      height: 80%;
    }
    .list-elements-contact {
      font-size: 14px;
    }
  }

  @media (max-width: 360px) {
    .block {
      padding: 0 10px;
    }
    h1 {
      padding: 0 10px;
    }
    #container-footer {
      height: auto;
    }
  }
</style>
