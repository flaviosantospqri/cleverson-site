---
import { Image } from "astro:assets";
import ImgAvatar from "../assets/person/person.png";
import Icon from "./Icon.astro";
---

<div id="container">
  <div class="content">
    <span class="notification-span">1</span>
    <div class="img-block"></div>
    <div class="content-information">
      <h2>Cleverson Borges Advogado</h2>
      <p>Me Acompanhe No Instagram!</p>
    </div>
  </div>
  <button class="btn-container">
    <Icon
      xmlns="http://www.w3.org/2000/svg"
      color="#ffffff"
      width="16"
      height="16"
      path="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"
    />Ir para o Instagram</button
  >
</div>

<style>
  #container {
    position: relative;
    width: 250px;
    max-height: 100px;
    background-color: var(--light-color);
    padding: 20px;
    display: flex;
    flex-direction: column;
    border-radius: 16px 16px 0 16px;
    box-shadow: -7px 11px 10px -8px rgba(0,0,0,0.75);
  }
  .notification-span {
    position: absolute;
    top: -15px;
    width: 25px;
    height: 25px;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #0063f7;
    color: var(--light-color);
    font-size: 18px;
    left: 10px;
  }
  .img-block {
    width: 50px;
    height: 50px;
    border-radius: 100%;
    box-sizing: border-box;
    display: flex;
    background-image: url("../assets/person/person.png");
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
  }
  .content-information {
    z-index: 9999;
    color: black;
    width: 200px;
  }
  .content {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    overflow: hidden;
    font-size: 12px;
    align-items: center;
    gap: 10px;
  }
  .btn-container {
    border: none;
    height: 30px;
    background-color: black;
    border-radius: 8px;
    color: var(--light-color);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }
  h2 {
    width: 100%;
    font-size: 14px;
  }
</style>
