---
const {
  xmlns,
  viewBox = "0 0 512 512",
  path,
  width = "24",
  height = "24",
  color = "#000",
  classe = "",
  ...props
} = Astro.props;
if (!xmlns || !path) {
  console.error("Icon: 'xmlns' and 'path' is required");
  return null;
}
---

<svg
  xmlns={xmlns}
  viewBox={viewBox}
  width={width}
  height={height}
  fill={color}
  class={classe}
  {...props}
>
  <path d={path}></path>
</svg>
<style>
  .shadow {
    box-shadow: -8px 9px 10px -4px rgba(0, 0, 0, 0.06);
  }
</style>
