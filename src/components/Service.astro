<script>
  import { onMount } from "solid-js";

  let isLargeScreen = true;

  const checkScreenSize = () => {
    if (window.innerWidth <= 1000) {
      isLargeScreen = false;
    } else {
      isLargeScreen = true;
    }
  };

  onMount(() => {
    checkScreenSize();
    window.addEventListener("resize", checkScreenSize);
  });
</script>

<div id="services"></div>
<div id="container">
  <div class="mask"></div>
  <div class="container-content-element">
    <div class="container-content-header">
      <div class="div-text-header">
        <p>Aqui, ofereço qualidade e diversidade.</p>
      </div>
      <div>
        <Button />
      </div>
    </div>
    <div class="large">
      <Carousel items={serviceList} />
    </div>
    <div class="small">
      <Galery items={serviceList} />
    </div>
    <button-talktome class="container-button-card"
      >Falar com Cleverson</button-talktome
    >
  </div>
</div>
<script>
  class ButtonTalkToMe extends HTMLElement {
    constructor() {
      super();
    }
    connectedCallback() {
      this.addEventListener("click", this.handleClick);
    }

    handleClick() {
      window.open(
        "https://wa.me/5511999999999?text=Olá! Cleverson, pode explicar melhor sobre os serviços que você atende ?",
        "_blank"
      );
    }
  }

  customElements.define("button-talktome", ButtonTalkToMe);
</script>
<style>
  #container {
    position: relative;
    width: 100%;
    display: flex;
    box-sizing: border-box;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    text-align: center;
    background-image: url("../assets/all/serviceimg.png");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    overflow: hidden;
    box-shadow: inset 3px 8px 5px -6px rgba(0, 0, 0, 0.75);
    padding: 40px 10px;
  }

  .mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    z-index: 1;
    pointer-events: none;
  }

  h1 {
    position: relative;
    z-index: 2;
    color: black;
  }

  .container-content-element {
    width: 100%;
    max-width: 1200px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 30px;
  }
  .container-content-header {
    display: flex;
    color: var(--light-color);
    width: 100%;
    justify-content: space-between;
    align-items: center;
    font-weight: 100;
    font-size: 18px;
  }

  .container-content-header .div-text-header {
    width: 100%;
    text-align: left;
  }
  .container-button {
    width: 100%;
    max-width: 300px;
    background-color: red;
  }

  .container-button-card {
    color: #3a3a3c;
    min-width: 200px;
    width: 300px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    box-shadow: 0px 2px 6px 0px rgba(255, 255, 255, 0.1);
    box-sizing: border-box;
    border: none;
    align-self: flex-start;
    background-color: var(--secondary-color);
    font-size: 16px;
    color: var(--light-color);
    font-weight: bold;
    cursor: pointer;
  }
  .large {
    width: 100%;
    max-width: 1200px;
  }
  .small {
    width: 100%;
    max-width: 1200px;
    position: sticky;
    top: 0;
  }
  @media (max-width: 1000px) {
    .large {
      display: none;
    }
  }
  @media (min-width: 1000px) {
    .small {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .container-content-header {
      display: none;
    }
    .container-content-element {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .container-button-card {
      margin: 0 auto;
      width: 100%;
      max-width: 500px;
      min-width: 300px;
    }
  }
</style>
